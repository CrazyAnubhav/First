<!DOCTYPE html>
<html lang="en">
    <title>MEAN CRUD by Anubhav</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.css">
<body>
    
    <% include ../header %>
   
   <table class="table table-bordered" border="1" cellpadding="3" cellspacing="0" align="center">
       <thread><tr align='center'><th><a href="/sort_employee_by_id"><button>ID</button></a></th><th><a href="/sort_employee_by_name"><button>Name</button></a></th><th><a href="/sort_employee_by_designation"><button>Designation</button></a></th><th><button>Operations</button></th></tr></thread>
       <tbody>
           <% for(var i=0; i<records.length; i++) {%>
       <tr align='center'><td><%= records[i]._id %></td>
        <td><%= records[i].name %></td>
        <td><%= records[i].designation %></td>
        <td> <div align= "center">
    <a href="/edit/<%= records[i]._id %>" data-toggle="tooltip" title="Edit" style='margin-right:25px'><i class="fa fa-pencil-square-o fa-2x" aria-hidden="true" style="color: black"></i></a>
    <a href="/delete_employee/<%= records[i]._id %>" onclick="return confirm('Are you sure you want to delete this item?');" data-toggle="tooltip" title="Delete"><i class="fa fa-trash-o fa-2x" aria-hidden="true" style="color: black"></i></a></div> </td</tr>
    <script>
        $(document).ready(function(){
          $('[data-toggle="tooltip"]').tooltip();   
        });
        </script>
            <style>
            .fa.fa-pencil-square-o:hover{
	        background: #EA6212;
}
            .fa.fa-trash-o:hover{
	        background: #EA6212;
}
            </style>
    <% } %>
        </tbody>
   </table> <br>
   <p align="right" style='margin-right:40px'><a href="/employee_add_form" data-toggle="tootip" title="Add an employee"><button type="button" class="btn btn-primary">Create an Employee</button></a><br><br></p>
   <% include ../footer %>

   
</body>
</html>
